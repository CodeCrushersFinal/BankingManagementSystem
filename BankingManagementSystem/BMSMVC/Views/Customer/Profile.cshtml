@{
    ViewBag.Title = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #9bbdf1, #98cbe0, #bfbdfb);
        }



        h1 {
            text-align: center;
            color: #333;
            margin-top:95px;
        }


        .profile-info {
            flex: 1;
        }

            .profile-info p {
                margin: 8px 0;
                color: #555;
            }

            .profile-info span {
                font-weight: bold;
                color: #333;
            }
    </style>
</head>
<body>
    <h1>Customer Profile</h1>

    <div class="profile-info">
        <p><span>First Name:</span> <span id="firstName"></span></p>
        <p><span>Last Name:</span> <span id="lastName"></span></p>
        <p><span>Email:</span> <span id="email"></span></p>
        <p><span>Phone Number:</span> <span id="phoneNumber"></span></p>
        <p><span>Address:</span> <span id="address"></span></p>
    </div>

    <script>
        // Fetch customer details dynamically
        //const customerId = 1; // Replace with dynamic ID based on logged-in customer
        const apiUrl = `https://localhost:7000/api/Customer/${customerId}`;

        async function fetchCustomerData() {
            try {
                const response = await fetch(apiUrl);
                if (!response.ok) throw new Error('Customer not found');

                const customer = await response.json();
                document.getElementById('firstName').textContent = customer.firstName;
                document.getElementById('lastName').textContent = customer.lastName;
                document.getElementById('email').textContent = customer.email;
                document.getElementById('phoneNumber').textContent = customer.phoneNumber;
                document.getElementById('address').textContent = customer.address;
            } catch (error) {
                console.error('Error fetching customer data:', error);
            }
        }

        fetchCustomerData();
    </script>
</body>
</html>