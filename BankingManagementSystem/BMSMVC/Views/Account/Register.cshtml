@model BMSMVC.DTO.CustomerDTO
@{
    ViewBag.Title = "Register";
}
<head>
    <style>
    body {
    font-family: Arial, sans-serif;
    /* background-color: #bdbde8; */
    background: linear-gradient(135deg, #9bbdf1, #98cbe0, #bfbdfb);
    margin: 0;
    padding-top: 60px; /* To avoid content being hidden under the navbar */
    }
    .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: #192677;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 2rem;
    z-index: 1000;
    }

    .form-modal {
    /display: none;/ /* Hidden by default */
    position: fixed;
    top: 300px;
    left: 300px;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
    justify-content: center;
    align-items: center;
    z-index: 1000;
    }

            .form-content {
    background-color: #d2e3eff0;
    padding: 2rem;
    border-radius: 15px;
    width: 400px;
    position: center;
    text-align: center;
    margin:auto;
    }
        .row {
            text-align: left;
            padding: 8px;
            font-size: 20px;
            justify-content: space-between;
            display:flex;
            max-height:50px;
        }
    .col-md-10 {
     height:25px;
     width:250px;
    padding-bottom:3px;
    
    border-radius:10px;
    }

    .btn  {
    background-color: #2b4d75;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 0.7rem 1.5rem;
    cursor: pointer;
    font-size: 1rem;
    align-items:center;
    margin-top:30px;
    }
    </style>
</head>
<main aria-labelledby="title">
    <h2 id="title" style="text-align: center; padding-top: 30px;">Register</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 style="text-align: center; padding-top: 30px; font-size: 20px;">Create a new account.</h4>
        
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div  class="form-content">
        <div class="row">
            @Html.LabelFor(m => m.CustomerId, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CustomerId, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "col-md-10" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.PasswordHash, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "col-md-10" })
            </div>
        </div>
      @*  <div class="row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>*@
        @*<div class="btn">*@
            @*<div class="btn">*@
                <input type="submit" value="Register" class="btn " />
            @*</div>*@
        </div>
            @*</div>*@
           
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
