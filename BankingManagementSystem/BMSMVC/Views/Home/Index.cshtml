    <script>// Function to open the welcome modal
        function openWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            modal.style.display = 'block';
        }

        // Function to close the welcome modal
        function closeWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            modal.style.display = 'none';
        }

        // Attach close event to the modal's close button
        document.querySelector('.close-btn').addEventListener('click', closeWelcomeModal);

        // AJAX function to fetch and load customer or admin data
        function fetchData(url, callback) {
            const xhr = new XMLHttpRequest();
            xhr.open('GET', url, true);
            xhr.onload = function () {
                if (xhr.status === 200) {
                    callback(xhr.responseText);
                } else {
                    console.error('Error fetching data from ' + url);
                }
            };
            xhr.send();
        }

        // Example usage: Load content for "customer.html" or "admin.html"
        function loadCustomerContent() {
            fetchData('Customer.cshtml', function (response) {
                document.body.innerHTML = response;
            });
        }

        function loadAdminContent() {
            fetchData('Admin.html', function (response) {
                document.body.innerHTML = response;
            });
        }

        // Adding event listeners for buttons
        document.querySelector('.open-modal-button').addEventListener('click', openWelcomeModal);

        // Note: If you want to load customer or admin pages via AJAX, call loadCustomerContent() or loadAdminContent() respectively.</script>
